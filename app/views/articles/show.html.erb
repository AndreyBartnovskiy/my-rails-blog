<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>

<p>
  <strong>Status:</strong>
  <%= @article.status %>
</p>

<% if @article.status.draft? %>
  <%= button_to "Publish", article_publications_path(@article) %>
<% else %>
  <%= button_to "Unpublish", article_publication_path(@article), method: :delete %>
<% end %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
