<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>

<p>
  <strong>Status:</strong>
  <%= @article.status %>
</p>

<% if @article.status == 'draft' %>
  <%= form_with(model: @article) do |form| %>
    <%= form.hidden_field :draft, value: "0" %>

    <div class="actions">
      <%= form.submit "Publish article "%>
    </div>
  <% end %>
<% else %>
  <%= form_with(model: @article) do |form| %>
    <%= form.hidden_field :draft, value: "1" %>

    <div class="actions">
      <%= form.submit "Unpublish article to draft "%>
    </div>
  <% end %>
<% end %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
